<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="tony.cheng" id="create-reindeer-table">
        <comment>NIM-14: create registration table to store registration info</comment>
        <createTable tableName="reindeer">
            <column autoIncrement="true" name="id" type="numeric(18, 0)">
                <constraints primaryKey="true" primaryKeyName="pk_reindeer"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
